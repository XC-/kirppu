{# -*- mode: django; -*- #}
<table class="table table-striped table-hover table-condensed">
{% if caption %}<caption class="h3">{{ caption }}</caption>{% endif %}
<thead>
    <tr>
        <th class="numeric">#</th>
        <th>began</th>
        <th class="numeric">sum</th>
        <th>counter</th>
    </tr>
</thead>
<tbody>
{% for item in items %}
    <tr data-index="{{ loop.index0 }}">
        <td class="numeric">{{ loop.index }}</td>
        <td>{{ item.start_time|dateTime }}</td>
        <td class="numeric">{{ item.total|displayPrice }}</td>
        <td>{{ item.counter }}</td>
    </tr>
{% endfor %}
</tbody>
</table>
