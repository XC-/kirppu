{# -*- mode: django; -*- #}
<div class="vendor-info-box">
    {% if title %}<h3>{% trans "Vendor" %}</h3>{% endif %}
    {% macro row(attr) %}
    <div class="row">
        <div class="col-xs-2 vendor-info-key">{{ text[attr] }}</div>
        <div class="col-xs-10">{{ vendor[attr] }}</div>
    </div>
    {% endmacro %}
    {{ row("name") }}
    {{ row("email") }}
    {{ row("phone") }}
    {{ row("id") }}
    {{ row("terms_accepted_str") }}
</div>
